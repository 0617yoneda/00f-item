<h2>注文履歴詳細</h2>

<div class="row">
  <div>
    <h3>注文情報</h3>
      <table>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime("%Y/%m/%d")%></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td><%= @order.postal_code %></br><%= @order.address %></br><%= @order.name %></td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @order.status %></td>
        </tr>
      </table>
  </div>

  <div>
    <h3>請求情報</h3>
      <table>
        <tr>
          <th>商品合計</th>
          <td>金額記載予定</td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @order.delivery_price %></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= @order.charge %></td>
        </tr>
      </table>
  </div>
</div>

<div>
  <h3>注文内容</h3>
    <table>
      <thead>
        <tr>
          <th>商品</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order_product.each do |order| %>
          <tr>
            <td><%= order.product.name %></td>
            <td><%= order.price %></td>
            <td><%= order.order_products.amount %></td>
            <td>小計記載予定</td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>