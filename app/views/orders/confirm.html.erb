<div class="container">
  <h5>注文情報確認</h5>
  <div class="row">
    <table class="products_confirm table table-striped table-hover mx-auto col-6">
      <thead>
        <tr>
          <td>商品名</td>
          <td>単価(税込)</td>
          <td>数量</td>
          <td>小計</td>
        </tr>
      </thead>
      <tbody>
        <% total = 0 %>
        <% @cart_products.each do |cart_product| %>
          <tr>
            <td><%= cart_product.product.name %></td>
            <td><%= cart_product.product.price %></td>
            <td><%= cart_product.amount %></td>
            <td><%= cart_product.subtotal %></td>
          </tr>
          <!-- 合計計算 -->
          <%  total += cart_product.subtotal %>
        <% end %>
      </tbody>
    </table>
        <!-- 請求金額計算 -->
        <% charge = total + @order.delivery_price %>
    <table class="payment table mx-auto col-2">
      <tr><th>送料</th><td><%= @order.delivery_price %></td></tr>
      <tr><th>商品合計</th><td><%= total %></td></tr>
      <tr><th>請求金額</th><td><%= charge %></td></tr>
    </table>
  </div>
  <div clas="row">
    <h5>支払方法</h5>
    <% if params[:order][:payment_method] == "クレジットカード" %>
      <%= "クレジットカード" %>
    <% elsif params[:order][:payment_method] == "銀行振込" %>
      <%= "銀行振込" %>
    <% end %>

    <h5>お届け先</h5>
    <div class = "derivery_address" >
      <%= @order.postal_code %>
      <%= @order.address %>
      <%= @order.name %>
    </div>
    <%= form_with model:@order, method: :post, url: orders_path, local: true do |f| %>
      <%= f.hidden_field :customer_id, :value => current_customer.id %>
      <%= f.hidden_field :payment_method, :value => params[:order][:payment_method] %>
      <%= f.hidden_field :postal_code, :value => @order.postal_code %>
      <%= f.hidden_field :address, :value => @order.address %>
      <%= f.hidden_field :charge, :value => charge %>
      <%= f.hidden_field :name, :value => @order.name %>
      <%= f.submit '購入を確定する',class:"btn btn-success"%>
    <% end %>
  </div>