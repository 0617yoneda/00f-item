<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-6 mx-auto">
    <h3 class="text-center", style="margin: 40px 0; padding: 0 20px; background-color: #BCDDFF;">管理者ログイン</h3>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field", style="margin: 40px 0;">
          <%= f.label 'メールアドレス', style: 'margin-right: 20px'%>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 35  %>
        </div>
        <div class="field", style="margin: 40px 0;">
          <%= f.label 'パスワード', style: 'margin-right: 50px' %>
          <%= f.password_field :password, autocomplete: "current-password", size: 35 %>
        </div>
        <br>
        <div class="actions text-center">
          <%= f.submit 'ログイン', class:"btn btn-primary center btn-lg px-5" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

