<!--他にも書き方がある？-->
<div class="container">
  <h4 class="title"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h4>
  <div class="row">
    <table class="table table-borderless col" style="table-layout:fixed;">
      <tr>
        <th style="width:200px;">顧客ID</th>
        <!--退会フラグ-->
        <th>
          <span class="customer_id"><%= @customer.id %></span>
          <span class="customer_flag">
            <% if @customer.is_deleted == false %>
              <span class="customer_flag false">有効会員</span>
            <% else %>
              <span class="customer_flag true">退会済み</span>
            <% end %>
          </span>
        </th>
      </tr>
      <tr>
        <th>氏名</th>
        <th><%= @customer.last_name %>　<%= @customer.first_name %></th>
      </tr>
      <tr>
        <th>フリガナ</th>
        <th><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></th>
      </tr>
      <tr>
        <th>郵便番号</th>
        <th><%= @customer.postal_code %></th>
      </tr>
      <tr>
        <th>住所</th>
        <th><%= @customer.address %></th>
      </tr>
      <tr>
        <th>電話番号</th>
        <th><%= @customer.telephone_number %></th>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <th><%= @customer.email %></th>
      </tr>
    </table>
  </div>
  <%= link_to '編集する', edit_admins_customer_path(@customer),class: "btn btn-success" %>
  <!--注文履歴一覧へのリンク-->
  <%= link_to '注文履歴一覧を見る', admins_orders_path(customer_id: @customer.id),  class: "btn btn-success" %>
</div>
