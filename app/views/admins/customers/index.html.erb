<div class="container">
  <h2>会員一覧</h2>
  <div class="row">
    <table class="table table-striped table-hover mx-auto col-8">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
        <tr>
          https://qiita.com/lemtosh469/items/b3a5b3b40d9f44dfbd06
          <!--他にも書き方がある？-->
          <td>
            <%= link_to admins_customer_path(customer) do %>
              <%= customer.last_name %><%= customer.first_name %>
            <% end %>
          </td>
          <td><%= customer.email %></td>
          <!--わからない-->
          <td><%= customer.is_deleted %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
