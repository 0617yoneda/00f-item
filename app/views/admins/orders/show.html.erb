<h2>注文履歴詳細</h2>

<div>
  <table>
    <tr>
      <th>購入者</th>
      <td><%= link_to admins_order_path(@order) do %>
        <%= @order.customer.first_name %><%= @order.customer.last_name %>
      <% end %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @order.name %></td>
    </tr>
    <tr>
      <th>支払方法</th>
      <td><%= @order.payment_method %></td>
    </tr>
    <tr>
      <th>注文ステータス</th>
      <td>
        <%= form_with model: @order, url: admins_order_path(@order), method: :patch, local: true do |f| %>
          <%= f.select :status, ["入金待ち","入金確認","製作中","発送準備中","発送済み"] %>
          <%= f.submit "更新", class: 'btn btn-danger' %>
        <% end %>
      </td>
    </tr>
  </table>
</div>

<table class="table">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @order_product.each do |order| %>
      <tr>
        <td><%= order.product.name %></td>
        <td><%= order.price%></td>
        <td><%= order.amount %></td>
        <td><%= order.price * order.amount %></td>
        <td>
          <%= form_with model: order, url: admins_order_product_path(order), method: :patch, local: true do |f| %>
            <%= f.select :making_status, ["製作不可","製作待ち","製作中","製作完了"] %>
            <%= f.submit "更新", class: 'btn btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<table>
  <tr>
    <th>商品合計</th>
    <td><%= @product_price %>円</td>
  </tr>
  <tr>
    <th>送料</th>
    <td><%= @order.delivery_price %>円</td>
  </tr>
  <tr>
    <th>請求金額合計</th>
      <% charge = @product_price + @order.delivery_price %>
    <td><strong><%= charge %>円</strong></td>
  </tr>
</table>


