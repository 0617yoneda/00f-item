<div class="container">
  <h2>商品一覧</h2>
  <div class="row justify-content-end m-2">
    <%= link_to new_admins_product_path do %>
      <button type="button" class="btn btn-secondary shadow rounded-circle border p-0" style="width:2rem;height:2rem;">＋</button>
    <% end %>
  </div>

  <div>
    <table class='table table-hover'>
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td><%= link_to product.name, admins_product_path(product) %></td>
            <td><%= converting_to_jpy(product.price) %></td>
            <td><%= product.category.name %></td>
            <td>
              <% if product.is_active == true %>
               販売中
              <% else %>
               売り切れ
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>