<h2>商品新規登録</h2>

<%= form_with model: @product ,url: admins_products_path, local: true do |f| %>
  <div class="form-group">
    <%= f.attachment_field :image %>
  </div>
  <div class="form-group">
    <%= f.label "商品名" %>
    <%= f.text_area :name %>
  </div>
  <div class="form-group">
    <%= f.label "商品説明" %>
    <%= f.text_field :introduction %>
  </div>
  <div>
    <%= f.label "ジャンル" %>
    <%= f.collection_select(:category_id, Category.all, :id, :name) %>
  </div>
  <div>
  <p>税抜価格</p>
    <%= f.text_field :price %>
  </div>
  <p>販売ステータス</p>
  <div class="form-group">
    <%= f.submit "新規登録", class: 'btn btn-danger' %>
  </div>
<% end %>
