<h2>ジャンル一覧・追加</h2>
<%= form_with model:@category, url:"/admins/categories", local:true do |f| %>
  <div class="form-group">
    <%= f.label "ジャンル" %>
    <%= f.text_field :name %>
    <%= f.submit "追加", class: 'btn btn-success' %>
  </div>
<% end %>

<table class="table">
  <thead>
      <tr>
        <th>ジャンル</th>
        <th>状態</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td>ジャンル名</td>
          <td>有効or無効</td>
          <td>編集する</td>
        </tr>
    <% end %>
  </tbody>
</table>