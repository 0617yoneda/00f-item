<div class="container">
  <div class="row">
    <h2>ジャンル一覧・追加</h2>
  </div>
  <div class="row mt-5">
    <%= form_with model:@category, url: admins_categories_path, local:true do |f| %>
    <%= render "layouts/error_messages", model: f.object %>
    <div class="form-group">
        <%= f.label "ジャンル" %>
        <%= f.text_field :name %>
        <%= f.radio_button :is_active, :true %>
        <%= f.label :is_active, "有効" %>
        <%= f.radio_button :is_active, :false %>
        <%= f.label :is_active, "無効" %>
        <%= f.submit "追加", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
  <div class="row mt-5">
    <table class="table col-6" style="table-layout:fixed;">
      <thead>
          <tr>
            <th style="width:200px;">ジャンル</th>
            <th style="width:100px;">状態</th>
            <th style="width:100px;"></th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.name %></td>
              <td>
                <% if category.is_active == true %>
                  有効
                <% else %>
                  無効
                <% end %>
              </td>
              <td><%= link_to "編集する", edit_admins_category_path(category), class:"btn btn-primary" %></td>
            </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>