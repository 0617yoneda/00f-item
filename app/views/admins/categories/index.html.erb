<h2>ジャンル一覧・追加</h2>
<%= form_with model:@category, url: admins_categories_path, local:true do |f| %>
  <div class="form-group">
    <%= f.label "ジャンル" %>
    <%= f.text_field :name %>
    <%= f.radio_button :name, "TRUE" %>有効
    <%= f.radio_button :name, "FALSE" %>無効
    <%= f.submit "追加", class: 'btn btn-success' %>
  </div>
<% end %>

<table class="table">
  <thead>
      <tr>
        <th>ジャンル</th>
        <th>状態</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td>有効or無効</td>
          <td><%= link_to "編集する", edit_admins_category_path(category) %></td>
        </tr>
    <% end %>
  </tbody>
</table>
