<div class="container mx-auto">
  <div class="row">
    <h4 style="margin: 40px 40px 20px 40px;">ジャンル一覧・追加</h4>
  </div>
  <div class="row m-3">
    <%= form_with model:@category, url: admins_categories_path, local:true do |f| %>
      <div class="form-group">
        <%= f.label "ジャンル", style: 'margin-right: 10px'%>
        <%= f.text_field :name, style: 'margin-right: 10px' %>
        <%= f.radio_button :is_active, :true %>
        <%= f.label :is_active, "有効", style: 'margin-right: 10px' %>
        <%= f.radio_button :is_active, :false %>
        <%= f.label :is_active, "無効", style: 'margin-right: 10px' %>
        <%= f.submit "追加", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
  <div class="row m-3">
    <table class="table col-7 table-hover table-striped" style="table-layout:fixed;">
      <thead>
          <tr>
            <th style="width:200px;">ジャンル</th>
            <th style="width:100px;">状態</th>
            <th style="width:100px;"></th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.name %></td>
              <td>
                <% if category.is_active == true %>
                  有効
                <% else %>
                  無効
                <% end %>
              </td>
              <td><%= link_to "編集する", edit_admins_category_path(category), class:"btn btn-primary" %></td>
            </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>