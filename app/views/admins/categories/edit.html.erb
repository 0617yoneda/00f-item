<div class="container">
  <h2>ジャンル編集</h2>
  <div class="row mt-5">
    <%= form_with model: @category, url:admins_category_path(@category), local:true do |f| %>
    <%= render "layouts/error_messages", model: f.object %>
      <div class="form-group">
        <%= f.label "ジャンル" %>
        <%= f.text_field :name, placeholder: "プリン" %>
        <%= f.radio_button :is_active, :true %>
        <%= f.label :is_active, "有効" %>
        <%= f.radio_button :is_active, :false %>
        <%= f.label :is_active, "無効" %>
        <%= f.submit "変更を保存する", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>