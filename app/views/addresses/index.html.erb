<div class="container">
  <div class="row mt-5 ml-5 mb-3">
    <h4 class="adress-head">配送先登録/一覧</h4>
  </div>
  <div class="row">
    <div class="create-address col-7">
      <%= form_with model:@address, url: '/addresses', local:true do |f| %>
      <%= render "layouts/error_messages", model: f.object %>
      <table>
        <tr>
          <th class="address-form-width"><%= f.label :postal_code, "郵便番号(ハイフンなし)"%></th>
          <th><%= f.text_field :postal_code %></th>
        </tr>
        <tr>
          <th><%= f.label :address, "住所"%></th>
          <th><%= f.text_field :address, class: "adress-form-customer" %></th>
        </tr>
        <tr>
          <th><%= f.label :name, "宛名"%></th>
          <th><%= f.text_field :name %></th>
        </tr>
      </table>
      <div class="text-right mr-4">
        <button type="submit" class="btn btn-success">登録する</button>
      </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <table class=" table table-bordered address-list col-10 mt-5">
      <colgroup span="4"></colgroup>
      <thead class="addres-index-color">
        <tr>
          <th style="width: 110px;">郵便番号</th>
          <th style="width: 400px;">住所</th>
          <th style="width: 240px;">宛名</th>
          <th style="width: 240px;"></th>
        </tr>
      </thead>
      <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td>
          <%= link_to '編集する', edit_address_path(id: address.id), class:"btn btn-primary" %>
          <%= link_to '削除する', address_path(id: address.id),method: :delete, class:"btn btn-danger ml-2" %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
