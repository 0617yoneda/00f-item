<div class="container">
  <div class="row">
    <div class="col-md-10">
      <h4>ショッピングカート</h4>
      <%= link_to "カートを空にする", cart_products_path, method: :delete, class:"btn btn-danger" %>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th colspan=1></th>
          </tr>
        </thead>
        <!--15から22行目までのダブルクォーテーションを消してください-->
        <tbaody>
          <tr>
            <%= "@cart_products.each do |curt_product|" %>
            <td><%= "cart_product.products.name" %></td>
            <td><%= "cart_product.products.price" %></td>
            <td><%= "cart_product.amount" %></td>
            <td><%= "cart_product.product.price * curt_product.amount" %></td>
            <!--下のリンクタグに%=を追加してください-->
            <td>< link_to "削除する", cart_product_path(@cart_product), method: :delete, class:"btn btn-denger" ></td>
            <% "end" %>
          </tr>
        </tbaody>
      </table>
      <%= link_to "買い物を続ける", root_path, class:"btn btn-primary" %>
      <table class="table table-bordered">
        <tr>
          <th>合計金額</th><td>@tatal_price</td>
        </tr>
      </table>
      <%= link_to "情報入力に進む", new_order_path, class:"btn btn-success" %>
    </div>
  </div>
</div>
