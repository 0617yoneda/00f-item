<div class="container">
  <div class="row">
    <h3 class="customers_login_head p-2 shadow-sm text-light bg-info">会員の方はこちらからログイン</h3>
  </div>
  <div class="row justify-content-center">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <table>
        <tr class="field form-group customers_login_form_tr">
          <th><%= f.label "メールアドレス" %></th>
          <th><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "customers_login_form" %></th>
        </tr>
        <tr class="field form-group customers_login_pass">
          <th><%= f.label "パスワード" %></th>
          <th><%= f.password_field :password, autocomplete: "current-password", class: "customers_login_form" %></th>
        </tr>
      </table>

      <div class="actions mt-5 login-btn">
        <%= f.submit "ログイン", class: "btn btn-info justify-content-end login-btn" %>
      </div>
    <% end %>
  </div>
  <div class="row">
    <%= render "customers/shared/links" %>
  </div>
</div>