<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h4>登録情報編集</h4>
      <%= form_with model:@customer, url: "/customers", local:true do |f| %>
      <table class="form-group">
        <tr>
          <th>名前</th>
          <td>(姓)<%= f.text_field :last_name %></td>
          <td>(名)<%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td>(セイ)<%= f.text_field :last_name_kana %></td>
          <td>(メイ)<%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.text_field :email %></td>
        </tr>
        <tr>
          <th>郵便番号(ハイフン無し)</th>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= f.text_field :telephone_number %></td>
          <td></td>
        </tr>
      </table>
        <%= f.submit '編集内容を保存する', class: 'btn btn-primary' %>
      <% end %>
      <span><%=link_to "退会する", customers_out_path, class:"btn btn-danger" %></span>
    </div>
  </div>
</div>
