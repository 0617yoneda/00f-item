<div class="container">
  <div class="row">
    <div class="col-md-10  profile-edit">
      <h4>登録情報編集</h4>
      <%= form_with model:@customer, url: "/customers", local:true do |f| %>
      <table class="table-borderless">
        <tr>
          <th>名前</th>
          <td>
            <%= f.text_field :last_name, placeholder:"(姓)"%>
            <%= f.text_field :first_name, placeholder:"(名)" %>
          </td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td>
            <%= f.text_field :last_name_kana, placeholder:"(セイ)" %>
            <%= f.text_field :first_name_kana, placeholder:"(メイ)" %>
          </td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.text_field :email %></td>
        </tr>
        <tr>
          <th>郵便番号(ハイフン無し)</th>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= f.text_field :address, size:41 %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= f.text_field :telephone_number %></td>
          <td></td>
        </tr>
      </table>
      <div class="form-btn">
        <span><%= f.submit '編集内容を保存する', class: 'btn btn-primary' %></span>
        <span><%=link_to "退会する", customers_out_path, data: { confirm: "本当に退会されますか？" },  class:"btn btn-danger" %></span>
      </div>
      <% end %>
    </div>
  </div>
</div>
